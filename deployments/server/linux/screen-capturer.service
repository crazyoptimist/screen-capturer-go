[Unit]
Description=Screen Capture Server Daemon
After=network-online.target
Wants=network-online.target systemd-networkd-wait-online.service

StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
ExecStart=/usr/local/bin/screen-server-linux -vhost Replace-This

Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
